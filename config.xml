<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
          "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <module name="CyclomaticComplexity"> <!-- cyclomatic -->
            <property name="max" value="0"/>
        </module>
	<module name="ClassDataAbstractionCoupling"> <!-- instances of other classes -->
    		<property name="max" value="5"/>
	</module>
	<module name="ClassFanOutComplexity"> <!-- number of other classes relied on -->
    		<property name="max" value="10"/>
	</module>
	<module name="NPathComplexity"> <!-- possible execution paths in function -->
    		<property name="max" value="100"/>
	</module>
	<module name="FileLength"> <!-- maximum allowable lines in file -->
		<property name="max" value="1000"/>
	</module>
	<module name="LineLength"> <!-- flag line if over max characters -->
    		<property name="max" value="80"/>
	</module>
        
    </module>
</module>
